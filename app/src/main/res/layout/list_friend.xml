<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/layer_out_list_Friend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/icon_Friend"
            android:layout_width="70dp"
            android:layout_height="70dp" />
        <TextView
            android:id="@+id/name_Friend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textStyle="bold"
            android:textColor="@color/Black"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/icon_Friend"/>
        <TextView
            android:id="@+id/detail_Friend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="xxxxxxxxxxxxxxxxxxxx"
            android:textColor="@color/Black"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/icon_Friend"
            android:layout_below="@+id/name_Friend"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/count_Star_Friend"
            android:text="0"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="@color/Black"
            android:layout_marginTop="8dp"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"/>

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:layout_toLeftOf="@id/count_Star_Friend"
            android:src="@drawable/star_success"/>

    </RelativeLayout>


</RelativeLayout>